<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey_for_bg"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="@dimen/p3"
            android:textColor="@color/black"
            android:text="Showing :"/>
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:text="ALL"
            android:textColor="@color/white_color"
            android:textSize="@dimen/p7"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/status_border"/>

        <TextView
            android:id="@+id/tv_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:text="pending"
            android:textColor="@color/pending_color"
            android:textSize="@dimen/p7"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/status_border" />
        <TextView
            android:id="@+id/tv_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:text="test"
            android:textColor="@color/t_color"
            android:textSize="@dimen/p7"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/status_border" />

        <TextView
            android:id="@+id/tv_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:text="interview"
            android:textColor="@color/interview_color"
            android:textSize="@dimen/p7"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/status_border"/>
        <TextView
            android:id="@+id/tv_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_margin="3dp"
            android:text="rejected"
            android:textColor="@color/rejected_color"
            android:textSize="@dimen/p7"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="@drawable/status_border"/>

    </LinearLayout>
    </HorizontalScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_applied_job"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:scrollbarStyle="insideOverlay"/>

</LinearLayout>