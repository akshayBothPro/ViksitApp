<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_applied_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_applied_item_image"
                android:layout_alignParentLeft="true"
                android:layout_width="90dp"
                android:layout_height="90dp" />

            <RelativeLayout
                android:layout_toRightOf="@+id/iv_applied_item_image"
                android:layout_toEndOf="@+id/iv_applied_item_image"
                android:layout_alignTop="@+id/iv_applied_item_image"
                android:layout_alignBottom="@+id/iv_applied_item_image"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_applied_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="2dp"
                    android:text="User Interface Developer"
                    android:textColor="@color/role_item_subtitle"
                    android:textSize="@dimen/p3" />

                <TextView
                    android:id="@+id/tv_applied_item_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_applied_item_title"
                    android:textSize="@dimen/p4"
                    android:textColor="@color/hint_color"
                    android:text="by Parallel Labs" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_deadline_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/p6"
                        android:textStyle="bold"
                        android:text="Next Deadline: "
                        android:textColor="@color/hint_color" />
                    <TextView
                        android:id="@+id/btn_applied_item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/p6"
                        android:textStyle="bold"
                        android:text="28th March"
                        android:textColor="@color/role_item_subtitle" />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:id="@+id/v_status_color"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/iv_applied_item_image"
                android:layout_alignBottom="@+id/iv_applied_item_image"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/black"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>