<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_opening_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_opening_item_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/tv_opening_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_opening_item_image"
                    android:layout_toEndOf="@+id/iv_opening_item_image"
                    android:layout_marginBottom="3dp"
                    android:text="User Interface Developer"
                    android:textColor="@color/role_item_subtitle"
                    android:textSize="@dimen/p3" />

                <TextView
                    android:id="@+id/tv_opening_item_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_opening_item_title"
                    android:layout_toRightOf="@+id/iv_opening_item_image"
                    android:layout_toEndOf="@+id/iv_opening_item_image"
                    android:textSize="@dimen/p4"
                    android:textColor="@color/hint_color"
                    android:text="by Parallel Labs" />

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/iv_opening_item_image"
                    android:layout_toRightOf="@+id/iv_opening_item_image"
                    android:layout_toEndOf="@+id/iv_opening_item_image"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/hint_color"
                    android:background="@mipmap/ic_access_time_white_36dp"/>
                <TextView
                    android:id="@+id/tv_opening_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/iv_time"
                    android:layout_toEndOf="@+id/iv_time"
                    android:layout_alignBottom="@+id/iv_opening_item_image"
                    android:layout_marginBottom="3dp"
                    android:textSize="@dimen/p6"
                    android:text="Expires in 1 Day"
                    android:textColor="@color/hint_color" />

            </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>