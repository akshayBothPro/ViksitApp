<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_opening_card"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_opening_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hint_color"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tv_opening_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="3dp"
                    android:text="User Interface Developer"
                    android:textColor="@color/role_item_subtitle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_opening_item_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_opening_item_title"
                    android:textColor="@color/hint_color"
                    android:text="by Parallel Labs" />

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/hint_color"
                    android:background="@mipmap/ic_access_time_white_36dp"/>
                <TextView
                    android:id="@+id/tv_opening_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/iv_time"
                    android:layout_toEndOf="@+id/iv_time"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:textSize="@dimen/p6"
                    android:text="Expires in 1 Day"
                    android:textColor="@color/hint_color" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>