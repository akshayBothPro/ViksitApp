<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".assessment.activity.AssessmentActivity"
    android:gravity="center"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have reached the end of the assessment."
        android:textColor="@color/black"
        android:textSize="@dimen/h7"
        android:layout_margin="10dp"
        android:textStyle="normal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_margin="10dp"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="10:06"
            android:textColor="@color/linkedIn_color"
            android:textSize="@dimen/h3"
            android:textAlignment="center"
            android:id="@+id/time"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/unanswered"
            android:layout_weight="50"
            android:text="7"
            android:textColor="@color/linkedIn_color"
            android:textSize="@dimen/h3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Time remaining"
            android:textColor="@color/gray_pill"
            android:textSize="@dimen/p5"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="Unanswered"
            android:textColor="@color/gray_pill"
            android:textSize="@dimen/p5"
            android:textAlignment="center"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to submit to complete the test or go to the question list to review your answers"
        android:textColor="@color/gray_pill"
        android:layout_margin="10dp"
        android:textSize="@dimen/h7"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_btn_shape"
        android:text="Submit"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="@dimen/h7"
        android:id="@+id/submit"
        />

</LinearLayout>