<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/assess_pass_con_padding"
    tools:context="pro.viksit.com.viksit.assessment.activity.AssessmentPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_assess_pass_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h4"
            android:textAlignment="center"
            android:textColor="@color/desc_color"
            android:text="You passed the assessment"/>

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  >
            <ProgressBar
                android:id="@+id/pb_assess_pass_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/asess_prog_bar_size"
                android:layout_height="@dimen/asess_prog_bar_size"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/assess_pass_pb_margin"
                android:indeterminate="false"
                android:max="60"
                android:progress="30"
                android:progressDrawable="@drawable/progress_bar_with_text_for_pass" />
            <TextView
                android:id="@+id/tv_assess_pass_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/selected_circle_color"
                android:textSize="@dimen/p1"
                android:text="100 %" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_assess_pass_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h7"
            android:textAlignment="center"
            android:textColor="@color/desc_color"
            android:text="Make sure you check out the full report to find out where you went wrong" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_assess_pass_view_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_assess_pass_continue"
        android:layout_marginBottom="@dimen/assess_pass_btn_margin"
        android:background="@drawable/white_bg_button"
        android:textColor="@color/theme_color"
        android:text="View full report"/>
    <Button
        android:id="@+id/btn_assess_pass_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/signup_btn_shape"
        android:textColor="@color/white_color"
        android:text="continue"/>
</RelativeLayout>
