<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_item_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_item_image_ver_margin"
        android:paddingBottom="@dimen/list_item_image_ver_margin">
        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="@dimen/list_item_image_size"
            android:layout_height="@dimen/list_item_image_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_1"/>
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item_image"
            android:layout_toEndOf="@+id/iv_item_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/list_item_image_ver_margin"
            android:layout_marginStart="@dimen/list_item_image_ver_margin"
            android:textSize="@dimen/p1"
            android:textColor="@color/desc_color"
            android:text="Urvashi"/>
        <TextView
            android:id="@+id/tv_item_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_item_xp"
            android:layout_toStartOf="@+id/tv_item_xp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_item_rank_right_margin"
            android:layout_marginEnd="@dimen/list_item_rank_right_margin"
            android:textSize="@dimen/p1"
            android:textColor="@color/desc_color"
            android:text="3rd"/>
        <TextView
            android:id="@+id/tv_item_xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/p1"
            android:textColor="@color/desc_color"
            android:text="4567"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_item_con"
        android:background="@color/hline"/>
</RelativeLayout>