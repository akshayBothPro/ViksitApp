<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro.viksit.com.viksit.dashboard.activity.MyProfileActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">
            <ImageButton
                android:id="@+id/ibtn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_keyboard_backspace_white_24dp"
                android:background="#00000000"/>
            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ibtn_back"
                android:layout_toEndOf="@+id/ibtn_back"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white_color"
                android:textSize="@dimen/h6"
                android:text="My Profile"/>
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:textColor="@color/white_color"
                android:textSize="@dimen/p4"
                android:text="log out"/>
        </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/ll_myprofile_tab_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/tl_myprofile_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="2dp"
            android:scrollIndicators="bottom"
            app:tabIndicatorColor="@color/theme_color"
            app:tabTextColor="@color/tab_unselected_color"
            app:tabBackground="@color/white_color"
            app:tabSelectedTextColor="@color/black"
            android:layout_gravity="top"
            app:tabTextAppearance="@style/TabLayoutTextStyle"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_myprofile_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>
