<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="pro.viksit.com.viksit.home.SignupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Welcome!"
                android:textColor="#595959"/>
            <TextView
                android:id="@+id/tv_journey_begins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:text="Your Journey begins here"
                android:textColor="#595959"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input_shape"
                android:padding="5dp"
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="@drawable/input_shape"
                android:inputType="phone"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:background="@drawable/input_shape"
                android:inputType="textPassword" />
            <EditText
                android:id="@+id/et_confirm_passsword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:background="@drawable/input_shape"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sign up"
                android:textColor="@android:color/white"
                android:background="@drawable/signup_btn_shape"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_instead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Already a member? Login instead"
        android:textColor="#6b6b6b"/>

</RelativeLayout>
