<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_input_con"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/login_con_padding"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_double"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="@dimen/h4"
        android:text="Welcome! Your Talentify journey begins here"
        android:textColor="@color/title_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_bottom">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/apet_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_shape"
            android:paddingLeft="@dimen/signup_margin"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/tv_error_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@color/error_bg"
            android:textColor="@color/error_text"
            android:text="Enter a valid email ID."
            android:textSize="@dimen/p5"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_bottom">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/apet_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_shape"
            android:paddingLeft="@dimen/signup_margin"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />
        <TextView
            android:id="@+id/tv_error_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@color/error_bg"
            android:textColor="@color/error_text"
            android:text="Enter a valid phone number."
            android:textSize="@dimen/p5"
            android:visibility="gone"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_bottom_double">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/apet_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_shape"
        android:paddingLeft="@dimen/signup_margin"
        android:paddingRight="@dimen/signup_margin"

        android:drawableRight="@mipmap/ic_remove_red_eye_white_24dp"
        android:drawableEnd="@mipmap/ic_remove_red_eye_white_24dp"
        android:drawableTint="@color/eye_icon_color"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/hint_color"
        android:inputType="textPassword"
        android:hint="Password"/>
    <TextView
        android:id="@+id/tv_error_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@color/error_bg"
        android:textColor="@color/error_text"
        android:text="Enter 6 to 14 characters."
        android:textSize="@dimen/p5"
        android:visibility="gone"
        />
        </LinearLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_signup"
        android:background="@drawable/signup_btn_shape"
        android:layout_margin="@dimen/signup_margin"
        android:text="sign up"
        android:textColor="@android:color/white"
        android:textSize="@dimen/p2"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/or"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:background="@color/hint_color" />

        <Button
            android:id="@+id/or"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:background="@drawable/or_shape"
            android:text="or"
            android:textAllCaps="false"
            android:textColor="@color/register_instead_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignRight="@+id/or"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/hint_color" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up via social medai"
        android:id="@+id/tv_via_social"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_bottom"
        android:gravity="center"
        >
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/linkedin_circle_button"
            android:layout_marginRight="8dp"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/google_circle_button"
            android:layout_marginRight="8dp"

            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/fb_circle_button"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_login_instead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:textAllCaps="false"
        android:text="Already a member? Login instead"
        android:background="#00000000"
        android:textSize="@dimen/p3"
        android:textColor="@color/hint_color"/>
</LinearLayout>


