<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_alignLeft="@+id/or"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:background="@color/hint_color"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/or"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:textColor="@color/register_instead_color"
            android:text="or"
            android:textAllCaps="false"
            android:background="@drawable/or_shape"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_alignRight="@+id/or"

            android:background="@color/hint_color"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_via_social"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/title_color"
            android:textSize="@dimen/p3"
            android:text="Log in via social media"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_signup_linkedIn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:backgroundTint="@color/linkedIn_color"
            android:src="@drawable/ic_accessible_black_36dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_signup_google"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:backgroundTint="@color/google_color"
            android:src="@drawable/ic_accessible_black_36dp"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_signup_fb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:borderWidth="0dp"
            app:elevation="6dp"
            android:layout_margin="5dp"
            app:backgroundTint="@color/fb_color"
            android:src="@drawable/ic_accessible_black_36dp"/>
        <!--<ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_accessible_black_36dp"
            android:background="@drawable/circle_border"/>-->

    </LinearLayout>
</LinearLayout>