<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pro.viksit.com.viksit.home.HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/app_store"/>
        <TextView
            android:id="@+id/tv_talentify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:textColor="#bdbdbd"
            android:textSize="20sp"
            android:text="Talentify"
            android:textAllCaps="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_get_started"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/button_get_started"
            android:textColor="@android:color/white"
            android:layout_marginBottom="5dp"
            android:text="get started"/>
        <Button
            android:id="@+id/btn_member"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/member_btn"
            android:textColor="@color/button_get_started"
            android:text="Already a memeber ?"/>
    </LinearLayout>

</LinearLayout>
