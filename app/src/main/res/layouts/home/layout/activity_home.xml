<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="pro.viksit.com.viksit.home.activity.HomeActivity"
    android:paddingLeft="30dp"
    android:paddingStart="30dp"
    android:paddingRight="30dp"
    android:paddingEnd="30dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_appicon_con"
        android:layout_above="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/app_store_inverted_cropped"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/tv_talentify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_app_icon"
            android:gravity="center_horizontal"
            android:typeface="sans"
            android:textColor="@color/welcome_text_color"
            android:textSize="@dimen/h5"
            android:text="Talentify"
            android:textAllCaps="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_get_started"
        android:layout_above="@+id/btn_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/signup_btn_shape"
        android:textColor="@color/white_color"
        android:textSize="@dimen/p2"
        android:textAllCaps="true"
        android:text="get started"/>
    <Button
        android:id="@+id/btn_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stateListAnimator="@null"
        android:background="@color/white_color"
        android:textAllCaps="false"
        android:textSize="@dimen/p3"
        android:textColor="@color/theme_color"
        android:text="Already a member ?"/>
</RelativeLayout>
