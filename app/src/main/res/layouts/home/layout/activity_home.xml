<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="100"
    android:background="@android:color/white"
    tools:context="pro.viksit.com.viksit.home.activity.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80">
        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/app_store"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/tv_talentify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/welcome_text_color"
            android:layout_marginTop="10dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textSize="21sp"
            android:text="Talentify"
            android:textAllCaps="true"
            android:layout_below="@+id/iv_app_icon"
            android:gravity="center_horizontal"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="20">
        <Button
            android:id="@+id/btn_get_started"
            android:layout_above="@+id/btn_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/signup_btn_shape"
            android:textColor="@color/white_color"
            android:textAllCaps="true"
            android:text="get started"/>
        <Button
            android:id="@+id/btn_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white_color"
            android:textColor="@color/hint_color"
            android:textStyle="bold"
            android:text="Already a Member ?"/>
    </LinearLayout>

</LinearLayout>