<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white"
    tools:context="pro.viksit.com.viksit.home.HomeActivity">
    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/app_store"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:id="@+id/tv_talentify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textColor="@color/welcome_text_color"
        android:textSize="20sp"
        android:text="Talentify"
        android:textAllCaps="true"
        android:layout_below="@+id/iv_app_icon"
        android:gravity="center_horizontal"/>
    <Button
        android:id="@+id/btn_get_started"
        android:layout_above="@+id/btn_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/member_btn"
        android:textColor="@color/theme_color"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="get started"/>
    <Button
        android:id="@+id/btn_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/member_btn"
        android:textColor="@color/theme_color"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="Already a member ?"/>
</RelativeLayout>