<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_input_con"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/white_color"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/login_con_padding">

    <TextView
        android:id="@+id/tv_login_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_double"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="Welcome back! Ready to get some work done?"
        android:textColor="@color/title_color"
        android:textSize="@dimen/h4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/apet_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_shape"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />


        <TextView
            android:id="@+id/tv_error_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/error_bg"
            android:padding="2dp"
            android:text="Enter a valid email ID."
            android:textColor="@color/error_text"
            android:textSize="@dimen/p5"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_double"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/apet_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_shape"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/tv_error_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/error_bg"
            android:padding="2dp"
            android:text="Username or Password incorrect."
            android:textColor="@color/error_text"
            android:textSize="@dimen/p5"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_btn_shape"
        android:text="LOG IN"
        android:textColor="@android:color/white"
        android:textSize="@dimen/p2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/p3" />

    <include
        android:id="@+id/signup_options"
        layout="@layout/signup_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_register_instead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:stateListAnimator="@null"
        android:text="TALEJDJKDKJHFJJKD"
        android:textAllCaps="false"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/p3" />
</LinearLayout>