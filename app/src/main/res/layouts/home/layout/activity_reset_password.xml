<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:padding="30dp">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tc_reset_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset your password"
            android:textColor="@color/desc_color"
            android:textSize="@dimen/h3"
            android:layout_marginBottom="20dp"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/apet_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/input_shape"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/hint_color"
            android:inputType="textPassword"
            android:hint="New Password" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/apet_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:background="@drawable/input_shape"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/hint_color"
            android:inputType="textPassword"
            android:hint="Confirm Password" />
        <Button
            android:id="@+id/btn_reset_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:background="@drawable/signup_btn_shape"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_sign_in_different"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stateListAnimator="@null"
        android:background="@color/white_color"
        android:textSize="@dimen/p3"
        android:textAllCaps="false"
        android:textColor="@color/hint_color"
        android:text="Sign in with a different account ?"/>
</RelativeLayout>