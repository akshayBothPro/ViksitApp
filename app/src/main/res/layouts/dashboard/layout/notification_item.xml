<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_notification_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/notification_hor_padding"
        android:src="@drawable/ic_2"/>
    <TextView
        android:id="@+id/tv_notification_desc"
        android:layout_toRightOf="@id/iv_notification_image"
        android:layout_toEndOf="@id/iv_notification_image"
        android:layout_alignTop="@id/iv_notification_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/notification_item_bottom_mrgin"
        android:textColor="@color/desc_color"
        android:textSize="@dimen/h5"
        android:text="hbsdhbcbdhsbcjhbscjsdcbcbhhbsdjc"/>
    <TextView
        android:id="@+id/tv_notification_time"
        android:layout_below="@id/tv_notification_desc"
        android:layout_toRightOf="@id/iv_notification_image"
        android:layout_toEndOf="@id/iv_notification_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/p4"
        android:text="4 hours ago" />
</RelativeLayout>