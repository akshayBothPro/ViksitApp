<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <RelativeLayout
        android:id="@+id/rl_image_icon_con"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/completed_task_hor_padding"
        android:layout_marginStart="@dimen/completed_task_hor_padding"
        android:layout_marginRight="@dimen/completed_task_hor_padding"
        android:layout_marginEnd="@dimen/completed_task_hor_padding">
        <com.github.vipulasri.timelineview.TimelineView
            android:id="@+id/time_marker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:markerSize="30dp"
            app:lineSize="3dp"
            app:line="@color/gray_pill"
            app:linePadding="5dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_completed_task_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_image_icon_con"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/p2"
        android:textColor="@color/completed_task_points_color"
        android:text="Won against sidharth"/>
    <TextView
        android:id="@+id/tv_completed_task_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_completed_task_item_title"
        android:layout_toRightOf="@id/rl_image_icon_con"
        android:textSize="@dimen/p4"
        android:textColor="@color/hint_color"
        android:text="at 12:10 pm"/>
</RelativeLayout>