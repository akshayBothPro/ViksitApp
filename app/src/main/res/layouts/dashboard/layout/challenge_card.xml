<?xml version="1.0" encoding="utf-8"?>
<pro.viksit.com.viksit.dashboard.util.CarouselLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            android:translationZ="-1dp"
            >


            <RelativeLayout
                android:id="@+id/gg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Risk vs Uncertainity"
                    android:textSize="@dimen/p5"
                    android:textAllCaps="true"
                    android:textColor="@color/title_challenge"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/header"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="The Concept of Risk"
                    android:textColor="@color/desc_color"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/lll"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/title"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/logos_55"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/profile_default"
                                android:id="@+id/myprofile"
                                android:scaleType="centerCrop"
                                android:layout_centerHorizontal="true"
                                />
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text="#2"
                                android:id="@+id/myrank"
                                android:textAlignment="center"
                                android:layout_alignBottom="@+id/myprofile"
                                android:layout_alignRight="@+id/myprofile"
                                android:textSize="@dimen/p7"
                                android:textAllCaps="false"
                                android:textColor="@color/theme_color"
                                android:background="@drawable/selected_circle_indicator"
                                />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You"
                            android:id="@+id/myid"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/h3"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5685 XP"
                            android:textColor="@color/challenge_xp_color"
                            android:id="@+id/mypoints"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/profile_default"
                                android:id="@+id/challengeprofile"
                                android:scaleType="centerCrop"
                                android:layout_centerHorizontal="true"
                                />
                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text="#2"
                                android:textSize="@dimen/p7"
                                android:id="@+id/challenger_rank"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/challenger_color"
                                android:layout_alignBottom="@+id/challengeprofile"
                                android:layout_alignRight="@+id/challengeprofile"
                                android:background="@drawable/selected_circle_indicator"
                                />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You"
                            android:id="@+id/challenger_name"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/h3"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5685 XP"
                            android:textColor="@color/challenge_xp_color"
                            android:id="@+id/challenger_points"
                            />



                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lll"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                    android:textColor="@color/desc_color"
                    android:textSize="@dimen/p2" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/questions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:textAlignment="center"
                            android:textColor="@color/desc_color"
                            android:textSize="@dimen/p1"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Questions"
                            android:textColor="@color/title_challenge"
                            android:textAlignment="center"
                            android:textSize="@dimen/p5" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/experience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="40 XP"
                            android:textAlignment="center"
                            android:textSize="@dimen/p1"
                            android:textColor="@color/desc_color"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Experience"
                            android:textAlignment="center"
                            android:textColor="@color/title_challenge"
                            android:textSize="@dimen/p5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/coins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:layout_centerInParent="true"
                            android:textAlignment="center"
                            android:textSize="@dimen/p1"
                            android:textColor="@color/desc_color"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_toRightOf="@+id/coins"
                            android:layout_alignTop="@+id/coins"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:src="@mipmap/ic_coins"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Coins"
                            android:textColor="@color/title_challenge"
                            android:textAlignment="center"
                            android:textSize="@dimen/p5" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:layout_centerHorizontal="true"
                    android:drawableTint="@color/title_challenge"
                    android:drawableRight="@mipmap/ic_coins"
                    android:padding="15dp"
                    android:textColor="@color/title_challenge"
                    android:text="Participating in this challenge costs 10 "
                    android:textSize="@dimen/p5" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/start_game"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_start_height"
            android:layout_below="@+id/card_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:background="@drawable/signup_btn_shape"
            android:drawableLeft="@drawable/ic_event_note_white_24dp"
            android:drawableTint="@color/white"
            android:minWidth="@dimen/btn_start_game"
            android:paddingBottom="@dimen/paddingbottom"
            android:paddingLeft="@dimen/paddingleft"
            android:paddingRight="@dimen/paddingright"
            android:paddingTop="@dimen/paddingtop"
            android:text=" Accept Challenge "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/p3"
            android:translationZ="6dp" />
    </RelativeLayout>

</pro.viksit.com.viksit.dashboard.util.CarouselLinearLayout>