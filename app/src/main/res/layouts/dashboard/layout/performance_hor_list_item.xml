<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:background="@color/white_color">

    <ImageView
        android:id="@+id/iv_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_disha"/>
    <TextView
        android:id="@+id/tv_item_title"
        android:layout_below="@+id/iv_item_image"
        android:layout_alignLeft="@+id/iv_item_image"
        android:layout_alignStart="@+id/iv_item_image"
        android:layout_alignRight="@+id/iv_item_image"
        android:layout_alignEnd="@+id/iv_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="80dp"
        android:maxLines="2"
        android:minLines="1"
        android:ellipsize="end"
        android:text="Disha Patani"
        android:textAlignment="center"
        android:textColor="@color/desc_color"
        android:textSize="12sp"/>
</RelativeLayout>