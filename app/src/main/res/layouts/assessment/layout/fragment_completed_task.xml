<?xml version="1.0" encoding="utf-8"?>
<pro.viksit.com.viksit.dashboard.util.CarouselLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="2dp"
            card_view:cardUseCompatPadding="true"
            android:translationZ="-1dp"
            >

            <RelativeLayout
                android:id="@+id/gg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/asses_card_header_hor_padding"
                >
                <TextView
                    android:id="@+id/tv_completed_task_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/completed_task_header_margin"
                    android:paddingLeft="@dimen/completed_task_hor_padding"
                    android:paddingRight="@dimen/completed_task_hor_padding"
                    android:paddingStart="@dimen/completed_task_hor_padding"
                    android:paddingEnd="@dimen/completed_task_hor_padding"
                    android:text="Risk vs Uncertainity"
                    android:textSize="@dimen/p5"
                    android:textAllCaps="true"
                    />
                <TextView
                    android:id="@+id/tv_completed_task_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_completed_task_header"
                    android:paddingLeft="@dimen/completed_task_hor_padding"
                    android:paddingRight="@dimen/completed_task_hor_padding"
                    android:paddingStart="@dimen/completed_task_hor_padding"
                    android:paddingEnd="@dimen/completed_task_hor_padding"
                    android:text="The Concept of Risk"
                    android:textSize="@dimen/h5"
                    android:textColor="@color/black"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_completed_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_completed_task_title"
                    android:layout_above="@+id/rl_remaining_task_con"
                    android:layout_marginTop="@dimen/completed_task_recycler_margin"
                    android:layout_marginBottom="@dimen/completed_task_recycler_margin"/>
                <RelativeLayout
                    android:id="@+id/rl_remaining_task_con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:id="@+id/iv_remaining_point"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/completed_task_hor_padding"
                        android:layout_marginStart="@dimen/completed_task_hor_padding"
                        android:layout_marginRight="@dimen/completed_task_recycler_margin"
                        android:layout_marginEnd="@dimen/completed_task_recycler_margin"
                        android:src="@drawable/unselected_circle_indicator"/>
                    <TextView
                        android:id="@+id/tv_remaining_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_remaining_point"
                        android:text="2 more remaining tasks"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/p5"/>
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</pro.viksit.com.viksit.dashboard.util.CarouselLinearLayout>