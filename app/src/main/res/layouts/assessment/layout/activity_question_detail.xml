<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro.viksit.com.viksit.assessment.activity.QuestionDetailActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/theme_color"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">
            <ImageView
                android:id="@+id/iv_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_keyboard_backspace_white_24dp"/>
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/iv_circle_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/iv_back_btn"
                android:layout_centerVertical="true"
                android:src="@drawable/profile_default"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                app:siBorderWidth="3dp"
                app:siBorderColor="@color/white_color"/>

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_circle_image"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/h6"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:text="Ananya asks..."/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/question_webview"
                android:layout_alignParentTop="true"
                android:background="@color/white_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/comments_upper_line"
                android:layout_below="@+id/question_webview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint_color"/>
            <RelativeLayout
                android:id="@+id/rl_comments_title_container"
                android:layout_below="@+id/comments_upper_line"
                android:background="@color/white_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_comments_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/p2"
                    android:text="Comments "/>
                <Button
                    android:id="@+id/comment_counts"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/tv_comments_title"
                    android:layout_toEndOf="@+id/tv_comments_title"
                    android:clickable="false"
                    android:stateListAnimator="@null"
                    android:textColor="@color/register_instead_color"
                    android:text="3"
                    android:textAllCaps="false"
                    android:background="@drawable/or_shape"/>
            </RelativeLayout>
            <View
                android:id="@+id/comments_lower_line"
                android:layout_below="@+id/rl_comments_title_container"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint_color"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comments_lower_line"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
