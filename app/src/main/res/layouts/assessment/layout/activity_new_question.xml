<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pro.viksit.com.viksit.assessment.activity.NewQuestionActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/theme_color"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">
            <Button
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_keyboard_backspace_white_24dp"/>


            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@+id/btn_back"
                android:layout_centerVertical="true"
                android:textSize="@dimen/h6"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:text="Ask a new question"/>
            <Button
                android:id="@+id/btn_send"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@mipmap/ic_send_white_24dp"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    android:layout_above="@+id/ll_bottom_bar"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/tv_select_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/p3"
        android:text="Select Module"/>
    <Spinner
        android:id="@+id/spn_dropdown"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tv_select_module"
        android:prompt="@string/spinner_title"/>
    <View
        android:id="@+id/v_hline1"
        android:layout_width="match_parent"
        android:layout_below="@+id/spn_dropdown"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/hint_color"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_ask_question"
        android:layout_below="@id/v_hline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Ask you question"
        android:textSize="@dimen/p3"
        android:textColor="@color/theme_color"/>
    <EditText
        android:id="@+id/et_ask_question"
        android:layout_below="@id/tv_ask_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:lines="3"
        android:maxLines="6"
        android:background="@null"
        android:gravity="left|top"
        android:textSize="@dimen/p1"
        android:textColor="@color/edit_text_color"
        android:inputType="textMultiLine"/>

    <View
        android:id="@+id/v_hline2"
        android:layout_width="match_parent"
        android:layout_below="@+id/et_ask_question"
        android:background="@color/hint_color"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/et_ques_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/v_hline2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:lines="6"
        android:maxLines="15"
        android:background="@null"
        android:gravity="left|top"
        android:textSize="@dimen/p1"
        android:textColorHint="@color/hint_color"
        android:textColor="@color/edit_text_color"
        android:hint="Add a description (Optional)"
        android:inputType="textMultiLine"/>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@color/white_color"
        android:orientation="horizontal"
        android:weightSum="120">
        <ImageButton
            android:id="@+id/ibtn_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@null"
            android:tint="@color/bottom_color"
            android:src="@mipmap/ic_format_bold_white_24dp"/>
        <ImageButton
            android:id="@+id/ibtn_italic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@null"
            android:tint="@color/bottom_color"
            android:src="@mipmap/ic_format_italic_white_24dp"/>
        <ImageButton
            android:id="@+id/ibtn_underline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@null"
            android:tint="@color/bottom_color"
            android:src="@mipmap/ic_format_underlined_white_24dp"/>
        <ImageButton
            android:id="@+id/ibtn_quotes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@null"
            android:tint="@color/bottom_color"
            android:src="@mipmap/ic_format_quote_white_24dp"/>
        <ImageButton
            android:id="@+id/ibtn_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@null"
            android:tint="@color/bottom_color"
            android:src="@mipmap/ic_code_white_24dp"/>
        <ImageButton
            android:id="@+id/ibtn_attach"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@null"
            android:tint="@color/bottom_color"
            android:src="@mipmap/ic_attach_file_white_24dp"/>
    </LinearLayout>
</RelativeLayout>
