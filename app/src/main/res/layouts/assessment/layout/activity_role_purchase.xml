<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context="pro.viksit.com.viksit.role.activity.RolePurchaseActivity">

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:tint="@color/black"
        android:background="@color/white_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_keyboard_backspace_white_24dp"/>
    <Button
        android:id="@+id/btn_role_purchase_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/signup_btn_shape"
        android:textSize="@dimen/p1"
        android:textColor="@color/white_color"
        android:text="Purchase"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_role_purchase_submit"
        android:layout_below="@id/ibtn_back"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibtn_back">
        <ImageView
            android:id="@+id/iv_role_purchase_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_6"/>
        <TextView
            android:id="@+id/tv_role_purchase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textSize="@dimen/h2"
            android:textColor="@color/desc_color"
            android:textStyle="bold"
            android:text="Mutual Fund Planner"
            android:layout_below="@+id/iv_role_purchase_image"/>
        <TextView
            android:id="@+id/tv_role_purchase_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tv_role_purchase_title"
            android:textSize="@dimen/h4"
            android:text="Price: Rs 350"/>
        <View
            android:id="@+id/first_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_color"
            android:layout_below="@+id/tv_role_purchase_subtitle"/>
        <TextView
            android:id="@+id/tv_role_purchase_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_horizontal_line"
            android:padding="10dp"
            android:textColor="@color/comment_reply_color"
            android:textSize="@dimen/p4"
            android:text="Description"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/tv_role_purchase_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_role_purchase_desc_title"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/desc_color"
            android:textSize="@dimen/p1"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            />
        <View
            android:id="@+id/second_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_color"
            android:layout_below="@+id/tv_role_purchase_desc"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_role_purchase_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_horizontal_line"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/comment_reply_color"
            android:textSize="@dimen/p4"
            android:textAllCaps="true"
            android:text="Skills included"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_purchase_skills"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/tv_role_purchase_skills"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            />
        <View
            android:id="@+id/third_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_color"
            android:layout_below="@+id/rv_purchase_skills"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_role_purchase_module_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/third_horizontal_line"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/comment_reply_color"
            android:textSize="@dimen/p4"
            android:textAllCaps="true"
            android:text="contains 5 modules"/>
        <LinearLayout
            android:id="@+id/ll_role_purchase_module_list_con"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_role_purchase_module_title"
            android:orientation="vertical"
            android:padding="10dp">

        </LinearLayout>
        <View
            android:id="@+id/fourth_horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hint_color"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tv_role_purchase_asked_questions_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fourth_horizontal_line"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"
            android:text="Frequently asked questions"
            android:textSize="@dimen/p4"
            android:textAllCaps="true"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_role_purchase_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_role_purchase_asked_questions_title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
