<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/checkout_bg"
    tools:context="pro.viksit.com.viksit.role.activity.CheckoutActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/iv_back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/checkout_back_btn_hor_margin"
                android:layout_marginStart="@dimen/checkout_back_btn_hor_margin"
                android:tint="@color/white_color"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/ic_arrow_back_black_24dp"/>
            <TextView
                android:id="@+id/checkout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/checkout_toolbar_title_hor_margin"
                android:layout_marginStart="@dimen/checkout_toolbar_title_hor_margin"
                android:layout_toRightOf="@+id/iv_back_btn"
                android:layout_toEndOf="@+id/iv_back_btn"
                android:text="Checkout"
                android:textSize="@dimen/h4"
                android:textColor="@color/white_color"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_checkout_order_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/checkout_summary_padding"
            android:textColor="@color/comment_reply_color"
            android:textSize="@dimen/p2"
            android:text="Order Summary"/>
        <android.support.v7.widget.CardView
            android:id="@+id/cv_checkout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_checkout_order_summary">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/checkout_image_margin">
                <ImageView
                    android:id="@+id/iv_checkout_image"
                    android:layout_width="@dimen/checkout_image_size"
                    android:layout_height="@dimen/checkout_image_size"
                    android:layout_marginRight="@dimen/checkout_image_margin"
                    android:layout_marginEnd="@dimen/checkout_image_margin"
                    android:src="@drawable/ic_1"/>
                <TextView
                    android:id="@+id/tv_checkout_role_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_checkout_image"
                    android:layout_toEndOf="@id/iv_checkout_image"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/h7"
                    android:textColor="@color/desc_color"
                    android:text="User Interface Developer"
                    />
            </RelativeLayout>
            <View
                android:background="@color/hint_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/checkout_summary_padding">
                <TextView
                    android:id="@+id/tv_amount_to_pay"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/desc_color"
                    android:textSize="@dimen/p3"
                    android:text="Final amount to pay"/>

                <TextView
                    android:id="@+id/tv_amount_digits"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/desc_color"
                    android:textSize="@dimen/p3"
                    android:text="Rs 350"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_checkout_info"
            android:padding="@dimen/checkout_summary_padding"
            android:textSize="@dimen/p2"
            android:textColor="@color/comment_reply_color"
            android:text="Choose Payment Method"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_payment_option"
            android:layout_below="@id/tv_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/checkout_btn_margin"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/p2"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:text="Pay Rs 350"
        android:background="@drawable/signup_btn_shape"/>
</RelativeLayout>
