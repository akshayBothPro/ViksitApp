<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context="pro.viksit.com.viksit.role.activity.PurchaseSuccessActivity">
    <ImageView
        android:id="@+id/iv_purchase_success_tick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:tint="@color/circle_tick"
        android:src="@drawable/ic_circle_tick_24dp"/>
    <TextView
        android:id="@+id/tv_purchase_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="@color/desc_color"
        android:textSize="@dimen/h2"
        android:text="Your purchase was successful!"/>
    <TextView
        android:id="@+id/tv_purchase_success_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/p1"
        android:textColor="@color/color_success_purchase"
        android:text="This role will now be available in your Roles tab for access at any time."/>
    <Button
        android:id="@+id/btn_purchase_success_gotorole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Go to Role"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:background="@drawable/signup_btn_shape"/>
</LinearLayout>

