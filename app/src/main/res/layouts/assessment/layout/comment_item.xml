<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/rl_comment_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/iv_commentor_circle_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/profile_default"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            app:siBorderWidth="0dp"
            app:siBorderColor="@color/white_color"/>
        <TextView
            android:id="@+id/tv_commentor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_commentor_circle_image"
            android:layout_toEndOf="@+id/iv_commentor_circle_image"
            android:layout_alignTop="@+id/iv_commentor_circle_image"
            android:layout_margin="2dp"
            android:textColor="@color/commentor_name_color"
            android:textSize="@dimen/p4"
            android:text="Mannu Das Gupta"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_commentor_circle_image"
            android:layout_toEndOf="@+id/iv_commentor_circle_image"
            android:layout_alignBottom="@+id/iv_commentor_circle_image"
            android:layout_margin="2dp"
            android:textColor="@color/comment_time_color"
            android:textSize="@dimen/p4"
            android:text="23 hours ago"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_reply_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/comment_reply_color"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_comment_text"
        android:layout_below="@+id/rl_comment_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/p2"
        android:textColor="@color/comment_text_color"
        android:text="Sorry, could you clarify on the point?"/>
    <View
        android:id="@+id/v_fade"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/hint_color"
        android:layout_alignBottom="@+id/tv_comment_text"/>
</RelativeLayout>