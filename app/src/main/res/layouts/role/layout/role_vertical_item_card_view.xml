<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_role_vertical_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp"
        card_view:contentPaddingRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_role_vertical_item_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_10"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <TextView
                android:id="@+id/tv_role_vertical_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_role_vertical_item_image"
                android:layout_marginBottom="1dp"
                android:paddingTop="5dp"
                android:textColor="@color/welcome_text_color"
                android:textSize="@dimen/p7"
                android:textAllCaps="true"
                android:text="Game Designer"/>
            <TextView
                android:id="@+id/tv_role_vertical_item_subtitle"
                android:layout_below="@+id/tv_role_vertical_item_title"
                android:layout_toRightOf="@+id/iv_role_vertical_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textColor="@color/role_item_subtitle"
                android:textSize="@dimen/p4"
                android:text="User Interface Developer" />
            <TextView
                android:id="@+id/tv_role_vertical_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_role_vertical_item_image"
                android:layout_alignBottom="@+id/iv_role_vertical_item_image"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/role_item_status"
                android:textSize="@dimen/p7"
                android:text="31 of 247 items completed"/>
            <ProgressBar
                android:id="@+id/pb_role_vertical_item_progress"
                android:layout_above="@+id/tv_role_vertical_item_status"
                android:layout_toRightOf="@+id/iv_role_vertical_item_image"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingRight="5dp"
                android:progressTint="@color/linkedIn_color"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="60"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>