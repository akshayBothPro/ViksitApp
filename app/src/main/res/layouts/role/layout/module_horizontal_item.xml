<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/role_item_hor_padding"
    android:paddingBottom="@dimen/role_item_hor_padding"
    android:paddingLeft="@dimen/role_info_hor_padding"
    android:paddingStart="@dimen/role_info_hor_padding"
    android:background="@color/white_color">

        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/card_item_bottom_margin"
            android:layout_width="80dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/tv_item_title"
            android:layout_below="@+id/iv_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@id/iv_item_image"
            android:maxWidth="80dp"
            android:maxLines="2"
            android:minLines="1"
            android:ellipsize="end"
            android:text="hjdd hcdcd fd sdfsd fsh"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/p5"/>

</RelativeLayout>