<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/session_card_margin"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="@dimen/session_card_padding"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/session_card_padding">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/session_card_item_bottom_margin"
                android:maxLines="2"
                android:minLines="1"
                android:ellipsize="end"
                android:text="Assessing Risk Associated with an event"
                android:textSize="@dimen/h3"
                android:textColor="@color/black"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:minLines="1"
                android:ellipsize="end"
                android:text="Learn the basic concpets of risk and various types of risks in the world of bussiness"
                android:textAlignment="center"
                android:textSize="@dimen/p4"
                android:layout_marginBottom="@dimen/session_card_item_bottom_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a Shortcut"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/theme_color"
                android:layout_marginBottom="@dimen/session_card_item_bottom_margin"

                />
        </LinearLayout>

        </android.support.v7.widget.CardView>
    <ProgressBar
        android:id="@+id/pb_role_vertical_item_progress"
        android:layout_above="@+id/tv_role_vertical_item_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="60"
        android:layout_alignTop="@+id/card_view"
        android:layout_marginTop="-10dp"
        android:translationZ="6dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:text="Begin Skill"
        android:layout_below="@+id/card_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:background="@drawable/signup_btn_shape"
        android:padding="10dp"
        android:textColor="@color/white"
        android:translationZ="6dp"
        />
</RelativeLayout>