<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">

        <View
            android:id="@+id/rl_ver_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_above="@+id/rl_hor_line"
            android:background="@color/unselected_circle_color"
            />
        <View
            android:id="@+id/rl_hor_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/rl_ver_line"
            android:layout_toEndOf="@+id/rl_ver_line"
            android:background="@color/unselected_circle_color"
            />
        <View
            android:id="@+id/rl_ver_line2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_below="@+id/rl_hor_line"
            android:background="@color/unselected_circle_color"
            android:visibility="visible"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/unselected_circle_color"
            />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/unselected_circle_indicator"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/role_depth_child_title_left_pad"
        android:paddingStart="@dimen/role_depth_child_title_left_pad"
        android:paddingRight="@dimen/role_depth_title_hor_padding"
        android:paddingEnd="@dimen/role_depth_title_hor_padding"
        android:paddingBottom="@dimen/role_depth_child_bottom_pad"
        android:layout_weight="9">
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/role_depth_child_bottom_pad"
            android:text="Identification of risk"
            android:textSize="@dimen/p3"
            android:textColor="@color/desc_color"/>

        <ProgressBar
            android:id="@+id/progress1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="60"
            />
    </LinearLayout>
</LinearLayout>
