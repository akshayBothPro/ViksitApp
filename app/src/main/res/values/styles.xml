<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--may use for splashscreen layout by adding theme in manifest to the activity -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <!--for RecycleClick-->
    <item name="item_click_support" type="id"/>
    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">48sp
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>

    </style>

    <style name="AppTheme.BlueColor">
        <item name="colorAccent">@color/linkedIn_color</item> <!-- Whatever color you want-->
    </style>
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/theme_color</item>
    </style>


    <style name="HeadingMediumCentre3f3f3f">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">#3f3f3f</item>
    </style>
    <style name="BUTTONCentreDisabled">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#9b9b9b</item>
    </style>
    <style name="BodyCardLeftGrey">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#9b9b9b</item>
    </style>
    <style name="BodyCardCentreblackGrey">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#3f3f3f</item>
    </style>
    <style name="BodyEmphasisDefaultLeft3f3f3f">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#3f3f3f</item>
    </style>
    <style name="BodyDefaultLeftGrey">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">#9b9b9b</item>
    </style>
    <style name="SubheadingGrey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>
    <style name="LINKWhite">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="SubheadingmediumCentre3f3f3f">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">#3f3f3f</item>
    </style>
    <style name="SubheadingCAPSGrey">
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">#98999b</item>
    </style>


</resources>
