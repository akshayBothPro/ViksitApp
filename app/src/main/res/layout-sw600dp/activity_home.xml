<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="pro.viksit.com.viksit.home.activity.HomeActivity"
    android:paddingLeft="@dimen/home_horizontal_padding"
    android:paddingStart="@dimen/home_horizontal_padding"
    android:paddingRight="@dimen/home_horizontal_padding"
    android:paddingEnd="@dimen/home_horizontal_padding"
    android:paddingBottom="@dimen/home_vertical_padding"
    android:paddingTop="@dimen/home_vertical_padding"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rl_appicon_con"
        android:layout_above="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="@dimen/logosize"
            android:layout_height="@dimen/logosize"
            android:background="@mipmap/talentify_logo_red"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/home_icon_bottom_margin"/>
        <TextView
            android:id="@+id/tv_talentify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_app_icon"
            android:gravity="center_horizontal"
            android:textColor="@color/welcome_text_color"
            android:textSize="@dimen/h4"
            android:text="Talentify"
            android:textAllCaps="true"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_get_started"
        android:layout_above="@+id/btn_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_marginBottom="@dimen/home_start_btn_bottom_margin"
        android:background="@drawable/signup_btn_shape"
        android:textColor="@color/white_color"
        android:textSize="@dimen/p2"
        android:textAllCaps="true"
        android:text="get started"/>
    <Button
        android:id="@+id/btn_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_alignParentBottom="true"
        android:stateListAnimator="@null"
        android:background="@color/white_color"
        android:textAllCaps="false"
        android:textSize="@dimen/p3"
        android:textColor="@color/Centre_Grey"
        android:text="Already a member ?"/>
</RelativeLayout>
